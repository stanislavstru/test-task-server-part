{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"],
      "@/shared/types": ["./_shared/types/index.d.ts"]
    },
    "esModuleInterop": true
  },
  "include": ["src/**/*", "prisma/seed/*"],
  "exclude": ["node_modules", "types/**/*"]
}
